<div class="row">
  <div class="col-lg-10 col-lg-offset-1">

    <br>
    <a target="_blank" href="/blog/<%= @blog_post.id %>" class="btn btn-link btn-block">Open Post</a>
    <br>

    <form action="/blog_post/update/<%= @blog_post.id %>" method="POST">
      <div class="row">
        <div class='form-group col-xs-6'>
          <input name="title" type='text' class="form-control" value="<%= @blog_post.title %>">
        </div>
        <div class='form-group col-xs-6'>
          <input name="publish_date" type='text' class="form-control input-date" value="<%= @blog_post.publish_date.strftime("%m/%d/%Y") %>">
        </div>
        <div class="form-group col-xs-12">
          <textarea name="content" class="form-control" rows="15"><%= @blog_post.content %></textarea>
        </div>
        <div class="form-group col-xs-6">
          <div class="form-control">
            Comments
            <input name="comments" type="checkbox" <%= "checked" if @blog_post.comments %>>
          </div>
        </div>
        <div class="form-group col-xs-6">
          <div class="form-control">
            Publish
            <input name="publish" type="checkbox" <%= "checked" if @blog_post.publish %>>
          </div>
        </div>
        <div class="form-group col-xs-6">
          <a href="#" type="fake_submit" action="/blog_post/delete/<%= @blog_post.id %>" class="btn btn-primary btn-block delete">Delete</a>
        </div>
        <div class="form-group col-xs-6">
          <button type="submit" class="btn btn-primary btn-block">Update</button>
        </div>
      </div>
    </form>

  </div>
</div>
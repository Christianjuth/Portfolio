<h2 class="page-title-md"><%= @blog_post.title %></h2>

<% if @blog_post.publish %>
  <p class="text-muted text-center">Published: <%= @blog_post.publish_date.strftime("%m/%d/%Y") %>
    <% if @blog_post.publish_date.to_date < @blog_post.updated_at.to_date %>
    - Edited: <%= @blog_post.updated_at.strftime("%m/%d/%Y") %>
    <% end %>
  </p>
<% end %>

<%= RDiscount.new(@blog_post.content).to_html %>
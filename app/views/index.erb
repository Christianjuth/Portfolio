<div class="row">
  <div class="col-lg-10 col-lg-offset-1">

    <% if @page %>
      <%= RDiscount.new(@page.content).to_html %>
    <% end %>

    <br>
    <h1>Contact</h1>
    <br>
    <form action="/message/submit" method="POST">
      <div class="row">
        <div class="form-group col-xs-6">
          <input class="form-control" name="name" placeholder="Name">
        </div>
        <div class="form-group col-xs-6">
          <input class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group col-xs-12">
          <input class="form-control" name="fun_fact" placeholder="Favorite song">
        </div>
        <div class="form-group col-xs-12">
          <textarea class="form-control" name="message" rows="7" placeholder="Message..."></textarea>
        </div>
        <div class="form-group col-xs-12">
          <button type="submit" class="btn btn-primary btn-block">Send</button>
        </div>
      </div>
    </form>

  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <h2 class="text-center">Login</h2>
    <br>

    <form id="login-form" action="/login" method="POST">
      <div class="row">
        <div class="form-group col-xs-12">
          <input type="text" name="username" class="form-control" id="username" placeholder="Unsername" required>
        </div>
        <div class="form-group col-xs-12">
          <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
        </div>
        <div class="form-group col-xs-12">
          <div class="g-recaptcha form-control" data-sitekey="<%= @recaptcha_key %>"></div>
        </div>
        <div class="form-group col-xs-12">
          <button type="submit" class="btn btn-block btn-primary">Login</button>
        </div>
        <div class="form-group col-xs-12">
          <a href="/forgot_password" class="btn btn-link btn-block">Forgot Password?</a>
        </div>
      </div>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-lg-10 col-lg-offset-1">

    <h2>From: <%= @message.name %></h2>
    <br>
    
    <form>
      <div class="row">
        <div class="form-group col-xs-6">
          <input class="form-control" name="email" value="Favorite Song: <%= @message.fun_fact %>" readonly>
        </div>
        <div class="form-group col-xs-6">
          <input class="form-control" name="fun_fact" value="Recieved: <%= @message.created_at.strftime("%m/%d/%Y") %>" readonly>
        </div>
        <div class="form-group col-xs-12">
          <textarea class="form-control" name="message" rows="7" readonly><%= @message.message %></textarea>
        </div>
      </div>
    </form>
    
    <div class="row">
      <div class="col-md-3 col-md-offset-3 col-xs-6">
        <a href="mailto:<%= @message.email %>?body=Hey <%= @message.name %>," class="btn btn-link btn-block">Reply</a>
      </div>
      <div class="col-md-3 col-xs-6">
        <a href="#" class="inline-delete btn btn-block btn-link delete" type="fake_submit" action="/message/delete/<%= @message.id %>">Delete</a>
      </div>
    </div>
  </div>
</div>
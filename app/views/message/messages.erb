<h2 class="page-title">Messages</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Recieved</th>
      <th class="text-right">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.created_at.strftime("%d/%m/%Y") %></td>
        <td class="text-right">
          <a href="/message/<%= message.id %>">Read</a>
          <a href="#" type="fake_submit" class="delete" action="/message/delete/<%= message.id %>">Delete</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-lg-10 col-lg-offset-1">

    <br>
    <a target="_blank" href="/<%= @page.title %>" class="btn btn-link btn-block">Open Page</a>
    <br>
    
    <form action="/page/update/<%= @page.id %>" method="POST">
      <div class="row">
        <div class="form-group col-xs-12">
          <input name="title" type="text" class="form-control" value="<%= @page.title %>">
        </div>
        <div class="form-group col-xs-12">
          <input class="form-control" type="file" name="header_image" accept="image/gif, image/jpeg, image/png">
        </div>
        <div class="form-group col-xs-12">
          <textarea name="content" class="form-control" rows="15"><%= @page.content %></textarea>
        </div>
        <div class="form-group col-xs-12">
          <input class="form-control" type="file" name="image" accept="image/gif, image/jpeg, image/png">
        </div>
        <div class="form-group col-xs-6">
          <div class="form-control">
            Comments
            <input name="comments" type="checkbox" <%= "checked" if @page.comments %>>
          </div>
        </div>
        <div class="form-group col-xs-6">
          <div class="form-control">
            Publish
            <input name="publish" type="checkbox" <%= "checked" if @page.publish %>>
          </div>
        </div>
        <div class="form-group col-xs-6">
          <a href="#" type="fake_submit" action="/page/delete/<%= @page.id %>" class="btn btn-primary btn-block delete">Delete</a>
        </div>
        <div class="form-group col-xs-6">
          <button type="submit" class="btn btn-primary btn-block">Update</button>
        </div>
      </div>
    </form>

  </div>
</div>
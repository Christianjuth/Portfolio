<br>
<div class="row">
  <div class="col-lg-10 col-lg-offset-1">

    <form action="/page/update/<%= @page.id %>" method="POST">
      <div class="row">
        <div class='form-group col-xs-10'>
          <input name="title" type='text' class="form-control" value="<%= @page.title %>">
        </div>
        <div class="form-group col-xs-2">
          <label>
            <input name="comments" type="checkbox" class="form-check-input">
            Allow Comments
          </label>
        </div>
        <div class="form-group col-xs-12">
          <textarea name="content" class="form-control" rows="15"><%= @page.content %></textarea>
        </div>
        <div class="form-group col-xs-6">
          <a href="#" type="fake_submit" action="/page/delete/<%= @page.id %>" class="btn btn-primary btn-block delete">Delete</a>
        </div>
        <div class="form-group col-xs-6">
          <button type="submit" class="btn btn-primary btn-block">Update</button>
        </div>
      </div>
    </form>

  </div>
</div>
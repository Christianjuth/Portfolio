<% if @entry %>
  <meta property="og:site_name" content="Christian Juth"/>
  <meta property="og:title" content="<%= @entry.title %>"/>
  <meta property="og:type" content="image/png"/>
  <meta property="og:description" content="<%= @entry.description.split[0...75].join(' ') %>..." >
  <meta property="og:url" content="<%= @host %>/portfolio/<%= @entry.id %>"/>
  <meta property="og:image:width" content="538"/>
  <meta property="og:image:height" content="1024"/>
  <meta property="og:image" content="<%= @host %>/portfolio/image/<%= @entry.id %>.png"/>

  <meta name="twitter:card" content="portfolio_entry"/>
  <meta name="twitter:site" content="@christianjuth"/>
  <meta name="twitter:creator" content="@christianjuth"/>
  <meta property="twitter:title" content="<%= @entry.title %>"/>
  <meta property="twitter:description" content="<%= @entry.description.split[0...75].join(' ') %>..."/>
  <meta property="twitter:image" content="<%= @host %>/portfolio/image/<%= @entry.id %>.png"/>
<% elsif @blog_post %>
  <meta property="og:site_name" content="Christian Juth"/>
  <meta property="og:title" content="<%= @blog_post.title %>"/>
  <meta property="og:type" content="image/png"/>
  <meta property="og:description" content="<%= @blog_post.content.split[0...75].join(' ') %>..." >
  <meta property="og:url" content="<%= @host %>/blog/<%= @blog_post.id %>"/>
  <meta property="og:image:width" content="538"/>
  <meta property="og:image:height" content="1024"/>
  <meta property="og:image" content="<%= @host %>/blog/image/<%= @blog_post.id %>.png"/>

  <meta name="twitter:card" content="blog_post"/>
  <meta name="twitter:site" content="@christianjuth"/>
  <meta name="twitter:creator" content="@christianjuth"/>
  <meta property="twitter:title" content="<%= @blog_post.title %>"/>
  <meta property="twitter:description" content="<%= @blog_post.content.split[0...75].join(' ') %>..."/>
  <meta property="twitter:image" content="<%= @host %>/blog/image/<%= @blog_post.id %>.png"/>
<% else %>
  <meta property="og:site_name" content="Christian Juth"/>
  <meta property="og:title" content="ChristianJuth.com"/>
  <meta property="og:type" content="image/png"/>
  <meta property="og:description" content="ChristianJuth.com features projects, blog posts, and more by Christian." >
  <meta property="og:url" content="<%= @host %>/"/>
  <meta property="og:image:width" content="538"/>
  <meta property="og:image:height" content="1024"/>
  <meta property="og:image" content="<%= @host %>/open_graph_image.png"/>

  <meta name="twitter:card" content="portfolio_entry"/>
  <meta name="twitter:site" content="@christianjuth"/>
  <meta name="twitter:creator" content="@christianjuth"/>
  <meta property="twitter:title" content="ChristianJuth.com"/>
  <meta property="twitter:description" content="ChristianJuth.com features projects, blog posts, and more by Christian."/>
  <meta property="twitter:image" content="<%= @host %>/open_graph_image/.png"/>
<% end %>
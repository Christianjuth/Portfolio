{
  "name": "Sinatra",
  "version": "0.1.0",
  "description": "Sinatra startpoint",
  "main": "index.js",
  "scripts": {
    "postinstall": "brew install Caskroom/cask/wkhtmltopdf && bundle install --without production && npm run migrate && npm run seed && bower install && grunt once && ls db/",
    "migrate": "bundle exec rake db:migrate_databases",
    "seed": "bundle exec rake db:seed",
    "test": "source ./travis/setup-codacy.sh && bundle exec cucumber",
    "stop": "kill -9 $(lsof -i tcp:3000 | tail -n 1 | perl -lne 'print $& if /(?<=ruby)\\s+[0-9]+/i')",
    "start": "grunt once && shotgun -o 0.0.0.0 -p 3000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Christianjuth/sinatra-startpoint.git"
  },
  "author": "Christian Juth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Christianjuth/sinatra-startpoint/issues"
  },
  "homepage": "https://github.com/Christianjuth/sinatra-startpoint",
  "devDependencies": {
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-coffee": "^1.0.0",
    "grunt-contrib-compress": "^1.3.0",
    "grunt-contrib-cssmin": "^1.0.2",
    "grunt-contrib-imagemin": "^1.0.1",
    "grunt-contrib-sass": "^1.0.0",
    "grunt-contrib-uglify": "^2.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "load-grunt-tasks": "^3.2.0",
    "mocha": "^3.2.0",
    "time-grunt": "^1.2.1",
    "zombie": "5.0.5"
  }
}

{
  "name": "Sinatra",
  "version": "0.1.0",
  "description": "Sinatra startpoint",
  "main": "index.js",
  "scripts": {
    "postinstall": "bundle install --without production && npm run migrate && npm run seed && bower install && grunt once && ls db/",
    "migrate": "bundle exec rake db:migrate_test_database && sleep 30 && bundle exec rake db:migrate",
    "seed": "bundle exec rake db:seed",
    "test": "bundle exec rake db:reset_test_database && bundle exec cucumber",
    "stop": "kill -9 $(lsof -i tcp:3000 | tail -n 1 | perl -lne 'print $& if /(?<=ruby)\\s+[0-9]+/i')",
    "start": "grunt once && shotgun -o 0.0.0.0 -p 3000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Christianjuth/sinatra-startpoint.git"
  },
  "author": "Christian Juth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Christianjuth/sinatra-startpoint/issues"
  },
  "homepage": "https://github.com/Christianjuth/sinatra-startpoint",
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-coffee": "^0.13.0",
    "grunt-contrib-cssmin": "^1.0.2",
    "grunt-contrib-imagemin": "^1.0.1",
    "grunt-contrib-sass": "^0.9.2",
    "grunt-contrib-uglify": "^2.0.0",
    "grunt-contrib-watch": "^0.6.1",
    "load-grunt-tasks": "^3.2.0",
    "mocha": "^2.2.5",
    "time-grunt": "^1.2.1",
    "zombie": "4.0.8"
  }
}
